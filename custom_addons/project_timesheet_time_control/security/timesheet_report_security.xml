<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="timesheet_time_report_user_rule" model="ir.rule">
        <field name="name">Timesheet Report: User sees own</field>
        <field name="model_id" ref="model_timesheet_time_report"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
    </record>
    <record id="timesheet_time_report_manager_rule" model="ir.rule">
        <field name="name">Timesheet Report: Manager sees all</field>
        <field name="model_id" ref="model_timesheet_time_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr_timesheet.group_timesheet_manager'))]"/>
    </record>
</odoo>
