<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard client action -->
    <record id="timesheet_dashboard_action" model="ir.actions.client">
        <field name="name">Timesheet Dashboard</field>
        <field name="tag">timesheet_time_control_dashboard</field>
    </record>

    <!-- Dashboard menu -->
    <menuitem
        id="menu_timesheet_dashboard"
        name="Dashboard"
        parent="hr_timesheet.menu_hr_time_tracking"
        action="timesheet_dashboard_action"
        groups="hr_timesheet.group_hr_timesheet_user"
        sequence="1"
    />
    <!-- Analysis menu -->
    <menuitem
        id="menu_timesheet_analysis"
        name="Timesheet Analysis"
        parent="hr_timesheet.menu_hr_time_tracking"
        action="timesheet_time_report_action"
        groups="hr_timesheet.group_hr_timesheet_user"
        sequence="30"
    />
</odoo>
