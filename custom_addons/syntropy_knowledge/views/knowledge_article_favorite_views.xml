<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- ============================================================ -->
    <!--  Form View                                                    -->
    <!-- ============================================================ -->
    <record id="knowledge_article_favorite_view_form" model="ir.ui.view">
        <field name="name">knowledge.article.favorite.form</field>
        <field name="model">knowledge.article.favorite</field>
        <field name="arch" type="xml">
            <form string="Favorite">
                <group>
                    <field name="article_id"/>
                    <field name="user_id"/>
                    <field name="sequence"/>
                </group>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  List View                                                    -->
    <!-- ============================================================ -->
    <record id="knowledge_article_favorite_view_tree" model="ir.ui.view">
        <field name="name">knowledge.article.favorite.list</field>
        <field name="model">knowledge.article.favorite</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="article_id" options="{'no_open': True}"/>
                <field name="user_id" widget="many2one_avatar"/>
                <field name="sequence" widget="handle"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  Search View                                                  -->
    <!-- ============================================================ -->
    <record id="knowledge_article_favorite_view_search" model="ir.ui.view">
        <field name="name">knowledge.article.favorite.search</field>
        <field name="model">knowledge.article.favorite</field>
        <field name="arch" type="xml">
            <search>
                <field name="article_id"/>
                <field name="user_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_article" string="Article" context="{'group_by': 'article_id'}"/>
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  Action                                                       -->
    <!-- ============================================================ -->
    <record id="knowledge_article_favorite_action" model="ir.actions.act_window">
        <field name="name">Favorites</field>
        <field name="res_model">knowledge.article.favorite</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No favorites yet
            </p>
            <p>Users can favorite articles by clicking the star icon.</p>
        </field>
    </record>

</odoo>
