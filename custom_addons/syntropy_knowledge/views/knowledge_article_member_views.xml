<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- ============================================================ -->
    <!--  Form View                                                    -->
    <!-- ============================================================ -->
    <record id="knowledge_article_member_view_form" model="ir.ui.view">
        <field name="name">knowledge.article.member.form</field>
        <field name="model">knowledge.article.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <group>
                    <field name="article_id"/>
                    <field name="partner_id"/>
                    <field name="permission"/>
                    <field name="article_permission" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  List View                                                    -->
    <!-- ============================================================ -->
    <record id="knowledge_article_member_view_tree" model="ir.ui.view">
        <field name="name">knowledge.article.member.list</field>
        <field name="model">knowledge.article.member</field>
        <field name="arch" type="xml">
            <list create="0" edit="0">
                <field name="article_id"/>
                <field name="partner_id" widget="many2one_avatar"/>
                <field name="permission"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  Search View                                                  -->
    <!-- ============================================================ -->
    <record id="knowledge_article_member_view_search" model="ir.ui.view">
        <field name="name">knowledge.article.member.search</field>
        <field name="model">knowledge.article.member</field>
        <field name="arch" type="xml">
            <search>
                <field name="article_id"/>
                <field name="partner_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_article" string="Article" context="{'group_by': 'article_id'}"/>
                    <filter name="group_partner" string="Partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  Action                                                       -->
    <!-- ============================================================ -->
    <record id="knowledge_article_member_action" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">knowledge.article.member</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No members configured
            </p>
            <p>Members are added via the Share panel on each article.</p>
        </field>
    </record>

</odoo>
