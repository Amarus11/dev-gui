<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- ============================================================ -->
    <!--  Form View                                                    -->
    <!-- ============================================================ -->
    <record id="knowledge_article_stage_view_form" model="ir.ui.view">
        <field name="name">knowledge.article.stage.form</field>
        <field name="model">knowledge.article.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <group>
                    <field name="name"/>
                    <field name="parent_id" options="{'no_open': True}"/>
                    <field name="sequence"/>
                    <field name="fold"/>
                </group>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  List View                                                    -->
    <!-- ============================================================ -->
    <record id="knowledge_article_stage_view_tree" model="ir.ui.view">
        <field name="name">knowledge.article.stage.list</field>
        <field name="model">knowledge.article.stage</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="fold"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  Search View                                                  -->
    <!-- ============================================================ -->
    <record id="knowledge_article_stage_view_search" model="ir.ui.view">
        <field name="name">knowledge.article.stage.search</field>
        <field name="model">knowledge.article.stage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="parent_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_parent" string="Article" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!--  Action                                                       -->
    <!-- ============================================================ -->
    <record id="knowledge_article_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">knowledge.article.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stages defined
            </p>
            <p>Stages are used to organize article items in kanban views.</p>
        </field>
    </record>

</odoo>
