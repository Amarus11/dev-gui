<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="article_public_template" name="Knowledge Article - Public View">
        <t t-call="web.login_layout">
            <t t-set="disable_footer" t-value="True"/>
            <t t-set="disable_header" t-value="True"/>

            <div class="o_knowledge_public_view">
                <style>
                    .o_knowledge_public_view {
                        max-width: 900px;
                        margin: 0 auto;
                        padding: 40px 20px;
                        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
                        color: #1a1a2e;
                        background: #fff;
                        min-height: 100vh;
                    }
                    .o_knowledge_public_header {
                        margin-bottom: 32px;
                        border-bottom: 1px solid #e8e8e8;
                        padding-bottom: 24px;
                    }
                    .o_knowledge_public_icon {
                        font-size: 48px;
                        margin-bottom: 12px;
                    }
                    .o_knowledge_public_title {
                        font-size: 2rem;
                        font-weight: 700;
                        margin: 0;
                        color: #1a1a2e;
                    }
                    .o_knowledge_public_meta {
                        color: #666;
                        font-size: 0.875rem;
                        margin-top: 8px;
                    }
                    .o_knowledge_public_cover {
                        width: 100%;
                        height: 260px;
                        object-fit: cover;
                        border-radius: 8px;
                        margin-bottom: 24px;
                    }
                    .o_knowledge_public_body {
                        line-height: 1.75;
                        font-size: 1rem;
                    }
                    .o_knowledge_public_body h1,
                    .o_knowledge_public_body h2,
                    .o_knowledge_public_body h3 {
                        margin-top: 1.5em;
                        margin-bottom: 0.5em;
                    }
                    .o_knowledge_public_body img {
                        max-width: 100%;
                        border-radius: 4px;
                    }
                    .o_knowledge_public_body pre {
                        background: #f5f5f5;
                        padding: 16px;
                        border-radius: 6px;
                        overflow-x: auto;
                    }
                    .o_knowledge_public_body code {
                        background: #f0f0f0;
                        padding: 2px 6px;
                        border-radius: 3px;
                        font-size: 0.9em;
                    }
                    .o_knowledge_public_footer {
                        margin-top: 40px;
                        padding-top: 20px;
                        border-top: 1px solid #e8e8e8;
                        color: #999;
                        font-size: 0.8rem;
                        text-align: center;
                    }
                </style>

                <!-- Cover image -->
                <t t-if="article.cover_image_url">
                    <img class="o_knowledge_public_cover"
                         t-att-src="article.cover_image_url"
                         t-att-alt="article.name"
                         t-att-style="'object-position: center %s%%' % (article.cover_image_position or 50)"/>
                </t>

                <!-- Header -->
                <div class="o_knowledge_public_header">
                    <t t-if="article.icon">
                        <div class="o_knowledge_public_icon">
                            <t t-out="article.icon"/>
                        </div>
                    </t>
                    <h1 class="o_knowledge_public_title">
                        <t t-out="article.name"/>
                    </h1>
                    <div class="o_knowledge_public_meta">
                        <t t-if="article.last_edition_uid">
                            Last edited by <t t-out="article.last_edition_uid.name"/>
                        </t>
                        <t t-if="article.last_edition_date">
                            on <t t-out="article.last_edition_date"/>
                        </t>
                        <span style="margin-left: 16px;">
                            <i class="fa fa-eye"/> <t t-out="article.views_count"/> views
                            <i class="fa fa-heart" style="margin-left: 12px;"/> <t t-out="article.likes_count"/> likes
                        </span>
                    </div>
                </div>

                <!-- Body -->
                <div class="o_knowledge_public_body">
                    <t t-out="article.body"/>
                </div>

                <!-- Footer -->
                <div class="o_knowledge_public_footer">
                    Powered by Syntropy Knowledge
                </div>
            </div>
        </t>
    </template>

</odoo>
