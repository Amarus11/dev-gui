<?xml version="1.0" encoding="UTF-8" ?>
<templates>

    <t t-name="syntropy_knowledge.KnowledgeCoverDialog">
        <Dialog title="'Cover Image'" size="'md'">
            <div class="o_knowledge_cover_dialog">
                <!-- Upload tab -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Upload an image</label>
                    <input type="file"
                           class="form-control"
                           accept="image/*"
                           t-on-change="onFileChange"/>
                </div>

                <div class="text-center text-muted mb-4">— or —</div>

                <!-- URL tab -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Paste image URL</label>
                    <div class="input-group">
                        <input type="url"
                               class="form-control o_knowledge_cover_url_input"
                               placeholder="https://..."/>
                        <button class="btn btn-primary" t-on-click="onUrlSubmit"
                                t-att-disabled="state.uploading">
                            Apply
                        </button>
                    </div>
                </div>

                <t t-if="state.uploading">
                    <div class="text-center py-2">
                        <i class="fa fa-spinner fa-spin me-1"/>Uploading...
                    </div>
                </t>
            </div>

            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="props.close">Cancel</button>
            </t>
        </Dialog>
    </t>

</templates>
