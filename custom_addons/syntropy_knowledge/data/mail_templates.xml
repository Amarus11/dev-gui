<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Invitation email template -->
        <record id="mail_template_knowledge_invite" model="mail.template">
            <field name="name">Knowledge: Invitation</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="subject">You have been invited to "{{ object.display_name }}"</field>
            <field name="email_from">{{ (object.create_uid.email_formatted or user.email_formatted) }}</field>
            <field name="body_html"><![CDATA[
<div style="margin: 0; padding: 0; font-size: 14px;">
    <p>Hello,</p>
    <p>
        You have been invited to collaborate on the knowledge article
        <strong>"<t t-out="object.display_name"/>"</strong>.
    </p>
    <p>
        <a href="/odoo/knowledge/{{ object.id }}"
           style="display: inline-block; padding: 10px 20px; background-color: #714B67; color: #fff;
                  text-decoration: none; border-radius: 4px;">
            Open Article
        </a>
    </p>
    <p>Best regards,<br/>The Knowledge Team</p>
</div>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Trash notification template -->
        <record id="mail_template_knowledge_trash" model="mail.template">
            <field name="name">Knowledge: Article Trashed</field>
            <field name="model_id" ref="model_knowledge_article"/>
            <field name="subject">Article "{{ object.display_name }}" has been trashed</field>
            <field name="email_from">{{ (object.last_edition_uid.email_formatted or user.email_formatted) }}</field>
            <field name="body_html"><![CDATA[
<div style="margin: 0; padding: 0; font-size: 14px;">
    <p>Hello,</p>
    <p>
        The knowledge article <strong>"<t t-out="object.display_name"/>"</strong>
        has been moved to the trash.
    </p>
    <p>
        It will be permanently deleted on
        <strong><t t-out="object.deletion_date"/></strong>
        unless restored before then.
    </p>
    <p>Best regards,<br/>The Knowledge Team</p>
</div>
            ]]></field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
